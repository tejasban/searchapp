<h1>Listing Products</h1>

<%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline' } do |f| %>
  <%= f.input :search, input_html: {value: ""} %>
  Filters:
  <%= label_tag :country, "Country", :value => "Country"  %>
  <%= text_field_tag "search[country]" %>
  <%= label_tag :price, "Price", :value => "Price"  %>
  <%= text_field_tag "search[filter_price]" %>
  <%= label :less, "Less", :value => "Less than"  %>
  <%= radio_button_tag "search[operator]", "<"%>
  <%= label :equal, "Equal", :value => "Equal" %>
  <%= radio_button_tag "search[operator]", "=", :checked => true %>
  <%= label :greater, "Greater", :value => "Greater" %>
  <%= radio_button_tag "search[operator]", ">" %>
  <%= select_tag "search[sort]", options_for_select([ "Relevance","Newest","Lowest Price", "Highest Price" ], "Newest") %>
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>

<table id="products">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Country</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td><%= product.country %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate @products %>
